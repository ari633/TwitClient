<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip" >
    
    <LinearLayout android:id="@+id/userImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dip"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip"
        android:background="@drawable/profilebg" 
        android:orientation="vertical">             
      		<ImageView
            android:id="@+id/list_image"
            android:layout_width="50dip"
            android:layout_height="50dip"/>            
    </LinearLayout>

	   
	    
	<TextView
	        android:id="@+id/userScreen"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignTop="@+id/userImg"
	        android:layout_toRightOf="@+id/userImg"
	        android:text="Ari Pratomo"
	        android:textColor="@color/control_two"
	        android:typeface="sans"
	        android:textSize="12sp"
	        android:textStyle="bold"/>      
	    
	<TextView
	        android:id="@+id/messageText"
	        android:clickable="true"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/userScreen"
	        android:textColor="#333333"
	        android:textSize="12sp"
	        android:layout_marginTop="1dip"
	        android:layout_toRightOf="@+id/userImg"
	        android:text="Just gona stand there and Just gona stand there and Just gona stand there and Just gona stand there and..." />	       
    
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/userScreen"
        android:gravity="right"
        android:text="5:45"
        android:layout_marginRight="5dip"
        android:textSize="12dip"
        android:textColor="#dddddd"
        android:textStyle="italic"/>		
	
</RelativeLayout>
