<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/list_selector" android:padding="4dp" android:layout_marginBottom="4dp">
        <TextView android:id="@+id/heading" android:text="Users Group" android:layout_width="fill_parent" android:layout_height="wrap_content" android:textSize="14sp" android:textStyle="bold"/>
    </RelativeLayout>    
    
<ListView android:id="@+id/list"   
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#F3f3f3" />
    
</LinearLayout>
