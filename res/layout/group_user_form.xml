    android:layout_height="wrap_content"
    android:stretchColumns="1" >
    
    <TableRow >
        <TextView android:text="User Name "/>
        <EditText android:id="@+id/username"/>
    </TableRow>
    
    
    <Button android:id="@+id/save"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        />
    
</TableLayout>
