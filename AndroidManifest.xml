<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tugasakhir.twitclient"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
         />
	<uses-permission android:name="android.permission.INTERNET" /> 
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />    
    
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Main" android:launchMode="singleInstance" 
            android:label="@string/title_activity_twit_client"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
        <intent-filter > 
	        <action android:name="android.intent.action.VIEW" /> 
	        <category android:name="android.intent.category.DEFAULT" /> 
	        <category android:name="android.intent.category.BROWSABLE" /> 
	        <data android:scheme="tclient-android" /> 
    	</intent-filter>
            
        </activity>
        
		<activity android:name=".ClientTweet" ></activity> 	
		<activity android:name=".MessageActivity" ></activity>
		<activity android:name=".MentionActivity" ></activity>
		<activity android:name=".FavoriteActivity" ></activity>
		<activity android:name=".TwitClientActivity" ></activity>
		<activity android:name=".GroupTimelineActivity" ></activity>
		<activity android:name=".TimeLineData" ></activity>
		<activity android:name=".DmActivity" ></activity>
		<activity android:name=".DmConversationActivity" ></activity>
		<activity android:name=".GroupActivity" ></activity>
		<activity android:name=".GroupForm" ></activity>
		<activity android:name=".GroupUserActivity" ></activity>
		<activity android:name=".GroupUserForm" ></activity>
	 	<activity android:name=".GroupListUser" ></activity>
		<activity android:name=".FriendRrefresh" ></activity>
	 	<activity android:name=".MuteActivity" ></activity>
	 	<activity android:name=".MuteForm" ></activity>
	 	
		<service android:name=".TimelineService" /> 
        
    </application>

</manifest>