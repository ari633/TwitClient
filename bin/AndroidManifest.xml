<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tugasakhir.twitclient"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />
	<uses-permission android:name="android.permission.INTERNET" /> 
    
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".TwitClientActivity" android:launchMode="singleInstance" 
            android:label="@string/title_activity_twit_client" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
        <intent-filter > 
	        <action android:name="android.intent.action.VIEW" /> 
	        <category android:name="android.intent.category.DEFAULT" /> 
	        <category android:name="android.intent.category.BROWSABLE" /> 
	        <data android:scheme="tclient-android" /> 
    	</intent-filter>
            
        </activity>
        
		<activity android:name=".ClientTweet" ></activity> 
		<service android:name=".TimelineService" /> 
        
    </application>

</manifest>